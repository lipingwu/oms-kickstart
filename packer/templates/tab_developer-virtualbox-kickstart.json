{
    "variables": {
        "build_name": "oms",
        "oms_version": "0.8.3",
        "system_user": "oms",
        "system_pass": "oms",
        "kickstart_cmd": "python kickstart-oms.py -H -c release.yaml"
    },
    "builders": [
        {
            "vm_name": "{{user `build_name` }}",
            "type": "virtualbox",
            "format": "ova",
            "output_directory": "{{user `build_name` }}-{{user `oms_version` }}-{{timestamp}}",
            "guest_os_type": "Ubuntu_64",
            "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.3-server-amd64.iso",
            "iso_checksum": "2cbe868812a871242cdcdd8f2fd6feb9",
            "iso_checksum_type": "md5",
            "http_directory" : "http_server/ubuntu64",
            "boot_command": [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz noapic ",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{ .Name }} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
                "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- <enter>"
            ],
            "ssh_username": "{{user `system_user` }}",
            "ssh_password": "{{user `system_pass` }}",
            "ssh_wait_timeout": "45m",
            "shutdown_command": "echo '{{user `system_pass` }}' | sudo -S shutdown -P now",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "512"]
            ]
        }
    ],

    "provisioners": [
        {
            "type": "file",
            "source": "uploads/oms-kickstarter",
            "destination": "/home/{{user `system_user` }}/"
        },
        {
            "type": "file",
            "source": "uploads/.ssh",
            "destination": "/home/{{user `system_user` }}/"
        },
        {
            "type": "shell",
            "inline": ["chmod 0700 /home/{{user `system_user` }}/.ssh",
                       "chmod 0600 /home/{{user `system_user` }}/.ssh/*"]
         },
         {
             "type": "shell",
             "execute_command": "echo 'oms' | sudo -E -S sh '{{ .Path }}'",
             "inline": ["cp -r /home/{{user `system_user` }}/.ssh /root/ && cd oms-kickstarter && {{user `kickstart_cmd` }}"
                        ]
         }
    ]
}
